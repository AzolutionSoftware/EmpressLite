<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dialog.OthersUserAttendanceIdInputDialogFragment">

    <EditText
        android:id="@+id/other_user_attendance_dialog_employeeId"
        android:layout_marginTop="20dp"
        android:background="@drawable/register_activity_editext_bg"
        android:padding="10dp"
        android:inputType="text"
        android:hint="Enter your employee id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/other_user_attendance_dialog_verifyButton"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/register_activity_signup_button_bg"
        android:layout_width="200dp"
        android:text="Verify"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_height="35dp" />


</LinearLayout>